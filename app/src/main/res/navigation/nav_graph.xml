<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/statisticsFragment">

    <fragment
        android:id="@+id/task_detail_fragment_dest"
        android:name="com.ai.hilt.TaskDetailFragment"
        android:label="fragment_task_detail"
        tools:layout="@layout/fragment_task_detail" >
        <action
            android:id="@+id/action_taskDetailFragment_to_tasks_fragment_dest"
            app:destination="@id/tasks_fragment_dest" />
        <action
            android:id="@+id/action_task_detail_fragment_dest_to_add_edit_task_fragment"
            app:destination="@id/add_edit_task_fragment" />
    </fragment>
    <fragment
        android:id="@+id/tasks_fragment_dest"
        android:name="com.ai.hilt.TasksFragment"
        android:label="fragment_tasks"
        tools:layout="@layout/fragment_tasks" >
        <action
            android:id="@+id/action_tasks_fragment_dest_to_statisticsFragment"
            app:destination="@id/statisticsFragment" />
        <action
            android:id="@+id/action_tasks_fragment_dest_to_taskDetailFragment"
            app:destination="@id/task_detail_fragment_dest" />
        <action
            android:id="@+id/action_tasks_fragment_dest_to_addEditTaskFragment"
            app:destination="@id/add_edit_task_fragment" />

    </fragment>
    <fragment
        android:id="@+id/add_edit_task_fragment"
        android:name="com.ai.hilt.AddEditTaskFragment"
        android:label="fragment_add_edit_task"
        tools:layout="@layout/fragment_add_edit_task" >
        <action
            android:id="@+id/action_add_edit_task_fragment_to_tasks_fragment_dest"
            app:destination="@id/tasks_fragment_dest" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.ai.hilt.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" >
        <action
            android:id="@+id/action_statisticsFragment_to_tasks_fragment_dest"
            app:destination="@id/tasks_fragment_dest" />
    </fragment>
</navigation>